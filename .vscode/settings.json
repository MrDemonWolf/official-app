{
  "json.schemas": [
    {
      "fileMatch": ["app.json"],
      "schema": {
        "properties": {
          "expo": {
            "properties": {
              "ios": {
                "properties": {
                  "icon": {
                    "type": "string",
                    "description": "Icon path (can be a directory)"
                  }
                }
              }
            }
          }
        }
      }
    }
  ],
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  }
}
